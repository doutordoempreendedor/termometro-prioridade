  <script>
    function avaliarPrioridade() {
      const impacto = parseInt(document.getElementById("impacto").value);
      const prazo = document.getElementById("prazo").value;
      const energia = document.getElementById("energia").value;
      const energiaAtual = document.getElementById("energiaAtual").value;

      let mensagem = "";

      if (impacto >= 4 && prazo === "urgente" && energia === energiaAtual) {
        mensagem = "✅ Essa tarefa merece sua atenção AGORA. Ela é estratégica, urgente e sua energia está compatível. Priorize!";
      } else if (impacto >= 4 && prazo !== "urgente") {
        mensagem = "📌 Alta prioridade, mas o prazo é flexível. Agende para um momento de foco e energia alta.";
      } else if (impacto <= 2) {
        mensagem = "🧹 Essa tarefa tem baixo impacto. Avalie se deve ser delegada, automatizada ou eliminada.";
      } else if (impacto >= 3 && energia !== energiaAtual) {
        mensagem = "⚠️ Cuidado! Essa tarefa exige mais energia do que você tem agora. Reagende ou se prepare antes de executar.";
      } else {
        mensagem = "🤔 Essa tarefa pode estar ocupando espaço sem gerar resultado real. Reavalie sua relevância.";
      }

      const resultado = document.getElementById("resultado");
      resultado.innerText = mensagem;
      resultado.style.display = "block";
    }
  </script>
